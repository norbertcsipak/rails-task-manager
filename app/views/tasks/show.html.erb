<div class="container">
  <h1><%= @tasks.title %></h1>
  <p><%= @tasks.details %></p>
  <p><%= @tasks.completed %></p>
  <%= link_to 'Edit task', edit_task_path(@tasks) %>
  <%= link_to 'Delete',
  destroy_task_path(@tasks),
  data: {turbo_method: :delete, turbo_confirm: 'Do you want to delete this task?'}
  %>
</div>
