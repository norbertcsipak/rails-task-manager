  <%= form_for(task) do |f| %>
    <div class="d-flex justify-content-center flex-column">
      <%= f.label :title %>
      <%= f.text_field :title %>
      <%= f.label :details %>
      <%= f.text_field :details %>
      <div class="d-flex">
        <%= f.label :completed %> <br>
        <%= f.check_box :completed, class: 'mx-3'%>
      </div>
      <div style="width: 100px" class="mt-3">
        <%= f.submit class: 'btn btn-primary btn-sm text-left' %>
      </div>
    </div>
<% end %>
